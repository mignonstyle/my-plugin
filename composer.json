{
    "name": "mignonstyle/my-plugin",
    "description": "my-plugin is WordPress Plugin",
    "type": "wordpress-plugin",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Mignon Style",
        }
    ],
    "require": {},
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "wp-coding-standards/wpcs": "*"
    },
    "scripts": {
        "post-install-cmd": [
            "php vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs/"
        ],
        "post-update-cmd": [
            "php vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs/"
        ],
        "phpcs": [
            "php vendor/bin/phpcs -p -s -v -n . --standard=./codesniffer.ruleset.xml --extensions=php"
        ]
    }
}
